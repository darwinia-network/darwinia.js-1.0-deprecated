{
  "repository": "https://github.com/darwinia-network/darwinia.js",
  "license": "Apache-2",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0",
    "typescript": "^4.0.2"
  },
  "scripts": {
    "build": "yarn polkadot-dev-build-ts",
    "build:interfaces": "polkadot-types-internal-interfaces",
    "build:publish": "polkadot-ci-ghact-build",
    "build:ts": "polkadot-dev-build-ts",
    "docs": "polkadot-types-internal-metadata && polkadot-dev-build-docs",
    "docs:release": "polkadot-ci-ghact-docs",
    "chain:info": "polkadot-types-chain-info",
    "lint": "polkadot-dev-run-lint",
    "clean": "polkadot-dev-clean-build",
    "postinstall": "polkadot-dev-yarn-only",
    "test": "polkadot-dev-run-test --coverage --runInBand --testPathIgnorePatterns e2e",
    "test:one": "polkadot-dev-run-test",
    "test:watch": "polkadot-dev-run-test --watch",
    "generate:defs": "ts-node --skip-project node_modules/@polkadot/typegen/scripts/polkadot-types-from-defs --package @darwinia/types/interfaces --input ./packages/types/src/interfaces",
    "generate:meta": "ts-node --skip-project node_modules/@polkadot/typegen/scripts/polkadot-types-from-chain --package @darwinia/types/interfaces --endpoint ./packages/types/src/metadata/darwinia.json --output ./packages/types/src/interfaces",
    "lervaversion": "lerna version --skip-git",
    "build-types-bundle": "node -r ts-node/register -r tsconfig-paths/register packages/types/scripts/build-json.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/register": "^7.11.5",
    "@babel/runtime": "^7.11.2",
    "@polkadot/dev": "^0.55.46",
    "@polkadot/ts": "^0.3.42",
    "@polkadot/typegen": "1.35.0-beta.19",
    "@types/jest": "^26.0.13",
    "@vuepress/plugin-search": "^1.5.4",
    "copyfiles": "^2.3.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typedoc": "^0.19.1",
    "typedoc-plugin-markdown": "^2.4.2",
    "typedoc-plugin-no-inherit": "^1.1.10"
  },
  "version": "1.0.1"
}
